
  <% if session[:current_player] == :player_1 %>
    <h2>It's player 1 turn</h2>
    <% if @fire_coordinates %>
        <% @result = $game.player_1.shoot @fire_coordinates.to_sym %>
    <% end %>

      <div>
      <strong>View of Opponent Board</strong>
      <pre>
      <%= $game.opponent_board_view($game.player_2) %>
    ----------

    <%= $game.own_board_view($game.player_1) %>
  <% else %>
    <h2>It's player 2 turn</h2>
    <% if @fire_coordinates %>
      <% @result = $game.player_2.shoot @fire_coordinates.to_sym %>
    <% end %>

    <div>
    <strong>View of Opponent Board</strong>
    <pre>
    <%= $game.opponent_board_view($game.player_1) %>
    ----------

    <%= $game.own_board_view($game.player_2) %>
  <% end %>

</pre>
